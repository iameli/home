#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

width="450"
height="-1"
fps="10"

palette="$(mktemp).png"

ffmpeg -y -i "$1" -vf "fps=$fps,scale=$width:$height:flags=lanczos,palettegen" "$palette"

yes | ffmpeg -i "$1" -i "$palette" -filter_complex "fps=$fps,scale=$width:$height:flags=lanczos[x];[x][1:v]paletteuse" "$1.gif"

rm "$palette"
