#!/bin/bash
LOCAL_DIR="\/Users\/eli\/rcode"
REMOTE_DIR="\/home\/root\/code"
if [[ "$OSTYPE" == "darwin"* ]]; then
  subl -b "$@"
  osascript -e "tell application \"Sublime Text\"" -e "activate" -e "end tell"
else
  ABSPATH=`realpath $1 | sed s/$REMOTE_DIR/$LOCAL_DIR/g`
  words=$(ssh loopback sub `echo $ABSPATH | sed s/$REMOTE_DIR/$LOCAL_DIR/g` 2>&1)
  echo $words
fi
