#!/bin/bash
LOCAL_DIR="\/Users\/eli\/sshcode"
REMOTE_DIR="\/home\/root\/code"
myPath="$1"
if [[ "$OSTYPE" == "darwin"* ]]; then
  subl -b "$@"
  osascript -e "tell application \"Sublime Text\"" -e "activate" -e "end tell"
else
  echo "Start: $myPath"
  myPath="$(translate-path $myPath)"
  echo "After translate-path: $myPath"
  myPath=`realpath -s $myPath | sed s/$REMOTE_DIR/$LOCAL_DIR/g`
  echo "After sed: $myPath"
  words=$(ssh loopback sub `echo $myPath | sed s/$REMOTE_DIR/$LOCAL_DIR/g` 2>&1)
  echo $words
fi
